<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#39e609"
    tools:context="com.example.juanesteban.calculadorderesistencia.MainActivity">





    <TextView
        android:id="@+id/Resistencia"
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:background="#ffff"
        android:gravity="center"
        android:textColor="#060606"
        android:textSize="40sp"
        android:fontFamily="cursive" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20pt"
        android:weightSum="4"
        android:background="#39e609">

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/Banda_1"
            >

        </Spinner>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/Banda_2">

        </Spinner>

        <Spinner
            android:id="@+id/Multiplicador"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </Spinner>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/Tolerancia">

        </Spinner>





    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20pt"
        android:background="#ffff">

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
               >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100pt"
            android:src="@mipmap/descarga"
            android:background="#39e609"
            />

        <TextView
            android:layout_width="5pt"
            android:layout_height="27pt"
            android:layout_marginLeft="60pt"
            android:id="@+id/Color1" />

        <TextView
            android:layout_width="5pt"
            android:layout_height="27pt"
            android:layout_marginLeft="70pt"
            android:id="@+id/Color2"/>

        <TextView
            android:layout_width="5pt"
            android:layout_height="27pt"
            android:id="@+id/Color3"
            android:layout_marginLeft="80pt" />

        <TextView
            android:layout_width="5pt"
            android:layout_height="27pt"
            android:id="@+id/Color4"
            android:layout_marginLeft="100pt" />


    </RelativeLayout>




</LinearLayout>
